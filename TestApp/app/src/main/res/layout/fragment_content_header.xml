<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_hearder"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="90dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/layout_containtlogobank"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="30dp">

        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tài khoản nguồn:"
            android:textColor="#4281D0" />

        <TextView
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="999 9999 999 999"
            android:textColor="#4281D0" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_containtlogobank"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="15dp"
            android:textColor="#FFF"
            android:layout_gravity="center"
            android:text="ACB"
            android:background="@drawable/bg_home_btn2"
            android:id="@+id/logo_bank"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:visibility="gone"
            android:textStyle="bold"
            android:id="@+id/tv_nameofbank"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="Viet tin bank" />
    </LinearLayout>

</RelativeLayout>